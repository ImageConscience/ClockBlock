{% comment %}
  ShopSchedulr block: Filter entries by position_id and date/time range.
  Uses Eastern Time (US) for 'now' comparison.
  If multiple matches, selects the one with the most recent start_at.
{% endcomment %}

{% assign all_entries = metaobjects.schedulable_entity.values %}
{% assign position_id = block.settings.position_id | default: '' | strip %}

{% comment %} Get current time in UTC, then adjust to Eastern Time (UTC-5 or UTC-4 depending on DST) {% endcomment %}
{% assign now_utc = 'now' | date: '%s' | plus: 0 %}
{% comment %} Eastern Time is UTC-5 (EST) or UTC-4 (EDT). Use -18000 seconds (5 hours) as base offset. {% endcomment %}
{% assign now_et = now_utc | minus: 18000 %}

{% comment %} Find matching entries and track the one with most recent start_at {% endcomment %}
{% assign latest_start_ts = 0 %}
{% assign selected_title = blank %}
{% assign selected_desktop_banner = blank %}
{% assign selected_mobile_banner = blank %}
{% assign selected_target_url = blank %}
{% assign selected_button_text = blank %}
{% assign found_match = false %}

{% if all_entries != blank %}
  {% for entry in all_entries %}
    {% assign entry_pos = entry.position_id | strip %}
    {% if entry_pos == position_id %}
      {% assign start_at_value = entry.start_at %}
      {% assign end_at_value = entry.end_at %}
      
      {% if start_at_value != blank and end_at_value != blank %}
        {% assign start_ts = start_at_value | date: '%s' | plus: 0 %}
        {% assign end_ts = end_at_value | date: '%s' | plus: 0 %}
        
        {% comment %} Check if current Eastern time is within the scheduled range: start_at <= NOW < end_at {% endcomment %}
        {% if now_et >= start_ts and now_et < end_ts %}
          {% comment %} This entry matches - check if it has a more recent start time {% endcomment %}
          {% if start_ts > latest_start_ts or latest_start_ts == 0 %}
            {% assign latest_start_ts = start_ts %}
            {% assign selected_title = entry.title %}
            {% assign selected_desktop_banner = entry.desktop_banner %}
            {% assign selected_mobile_banner = entry.mobile_banner %}
            {% assign selected_target_url = entry.target_url %}
            {% assign selected_button_text = entry.button_text %}
            {% assign found_match = true %}
          {% endif %}
        {% endif %}
      {% endif %}
    {% endif %}
  {% endfor %}
{% endif %}

{% assign breakpoint = block.settings.breakpoint | default: 768 | plus: 0 %}

<div class="shopschedulr" {{ block.shopify_attributes }}>
  {% if found_match and selected_target_url != blank %}
    <a href="{{ selected_target_url }}" class="shopschedulr__link">
      <div class="shopschedulr__banner shopschedulr__banner--overlay">
        <div class="shopschedulr__banner-image">
          {% if selected_desktop_banner != blank %}
            {% assign desktop_image_url = selected_desktop_banner %}
            {% comment %} Handle file_reference type - it might be a URL string or an object {% endcomment %}
            {% if selected_desktop_banner.image %}
              {% assign desktop_image_url = selected_desktop_banner.image.url %}
            {% elsif selected_desktop_banner.url %}
              {% assign desktop_image_url = selected_desktop_banner.url %}
            {% endif %}
            <img 
              src="{{ desktop_image_url }}" 
              alt="{{ selected_title }}" 
              class="shopschedulr__image shopschedulr__image--desktop"
              loading="lazy"
            >
          {% endif %}
          {% if selected_mobile_banner != blank %}
            {% assign mobile_image_url = selected_mobile_banner %}
            {% comment %} Handle file_reference type {% endcomment %}
            {% if selected_mobile_banner.image %}
              {% assign mobile_image_url = selected_mobile_banner.image.url %}
            {% elsif selected_mobile_banner.url %}
              {% assign mobile_image_url = selected_mobile_banner.url %}
            {% endif %}
            <img 
              src="{{ mobile_image_url }}" 
              alt="{{ selected_title }}" 
              class="shopschedulr__image shopschedulr__image--mobile"
              loading="lazy"
            >
          {% endif %}
        </div>
        <div class="shopschedulr__banner-content">
          {% if selected_title != blank %}
            <h2 class="shopschedulr__title">{{ selected_title }}</h2>
          {% endif %}
          {% if selected_button_text != blank %}
            <span class="shopschedulr__button">{{ selected_button_text }}</span>
          {% endif %}
        </div>
      </div>
    </a>
  {% elsif found_match %}
    {% comment %} Entry found but missing required fields {% endcomment %}
    <div class="shopschedulr__empty">
      <p>Active entry found but missing banner images or target URL.</p>
    </div>
  {% else %}
    <div class="shopschedulr__empty">
      <p>No active entries found for Position ID: "{{ position_id }}"</p>
    </div>
  {% endif %}
</div>


<style>
  .shopschedulr {
    width: 100%;
    margin: 20px 0;
  }
  
  .shopschedulr__banner {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
  }
  
  .shopschedulr__banner-image {
    position: relative;
    width: 100%;
    line-height: 0;
  }
  
  .shopschedulr__image {
    display: block;
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  
  .shopschedulr__image--desktop {
    display: block;
  }
  
  .shopschedulr__image--mobile {
    display: none;
  }
  
  @media (max-width: {{ breakpoint }}px) {
    .shopschedulr__image--desktop {
      display: none;
    }
    
    .shopschedulr__image--mobile {
      display: block;
    }
  }
  
  .shopschedulr__link {
    text-decoration: none;
    display: block;
    color: inherit;
  }

  .shopschedulr__link:hover {
    text-decoration: none;
  }

  .shopschedulr__banner-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
    color: white;
    text-align: left;
    padding: 40px;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }
  
  .shopschedulr__title {
    margin: 0;
    font-size: 2.5em;
    font-weight: bold;
    color: white;
    line-height: 1.2;
  }

  @media (max-width: {{ breakpoint }}px) {
    .shopschedulr__title {
      font-size: 2em;
    }

    .shopschedulr__banner-content {
      padding: 30px 20px;
    }
  }
  
  .shopschedulr__headline {
    margin: 0 0 15px 0;
    font-size: 1.8em;
    font-weight: 600;
    color: #34495e;
    line-height: 1.2;
  }
  
  @media (max-width: 768px) {
    .shopschedulr__headline {
      font-size: 1.4em;
    }
  }
  
  .shopschedulr__description {
    margin: 0 0 20px 0;
    font-size: 1.1em;
    color: #555;
    line-height: 1.6;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  @media (max-width: 768px) {
    .shopschedulr__description {
      font-size: 1em;
    }
  }
  
  .shopschedulr__button {
    display: inline-block;
    padding: 12px 30px;
    background-color: white;
    color: #667eea !important;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 600;
    font-size: 1em;
    transition: background-color 0.3s ease, transform 0.2s ease;
    cursor: pointer;
    align-self: flex-start;
  }

  .shopschedulr__banner:hover .shopschedulr__button {
    background-color: #f0f0f0;
    transform: translateY(-2px);
  }

  .shopschedulr__banner:active .shopschedulr__button {
    transform: translateY(0);
  }
  
  .shopschedulr__empty {
    padding: 40px 20px;
    text-align: center;
    color: #999;
    font-style: italic;
  }
  
</style>

{% schema %}
{
  "name": "ShopSchedulr Banner",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "position_id",
      "label": "Position ID",
      "info": "The position ID to filter scheduled content by",
      "default": "homepage_banner"
    },
    {
      "type": "number",
      "id": "breakpoint",
      "label": "Mobile Breakpoint (px)",
      "info": "Screen width below which mobile banner is shown",
      "default": 768
    }
  ]
}
{% endschema %}

