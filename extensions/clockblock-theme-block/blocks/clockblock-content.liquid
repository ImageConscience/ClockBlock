{% comment %}
  ClockBlock block: Filter entries by position_id and date/time range.
  Uses Eastern Time (US) for 'now' comparison.
  If multiple matches, selects the one with the most recent start_at.
{% endcomment %}

{% assign all_entries = metaobjects.schedulable_entity.values %}
{% assign position_id = block.settings.position_id | default: '' | strip %}

{% comment %} Get current time in UTC, then adjust to Eastern Time (UTC-5 or UTC-4 depending on DST) {% endcomment %}
{% assign now_utc = 'now' | date: '%s' | plus: 0 %}
{% comment %} Eastern Time is UTC-5 (EST) or UTC-4 (EDT). Use -18000 seconds (5 hours) as base offset. {% endcomment %}
{% assign now_et = now_utc | minus: 18000 %}

{% comment %} Find matching entries and track the one with most recent start_at {% endcomment %}
{% assign latest_start_ts = 0 %}
{% assign selected_title = blank %}
{% assign selected_description = blank %}
{% assign selected_desktop_banner = blank %}
{% assign selected_mobile_banner = blank %}
{% assign selected_target_url = blank %}
{% assign selected_button_text = blank %}
{% assign found_match = false %}

{% if all_entries != blank %}
  {% for entry in all_entries %}
    {% assign entry_pos = entry.position_id | strip %}
    {% if entry_pos == position_id %}
      {% assign start_at_value = entry.start_at %}
      {% assign end_at_value = entry.end_at %}
      
      {% if start_at_value != blank and end_at_value != blank %}
        {% assign start_ts = start_at_value | date: '%s' | plus: 0 %}
        {% assign end_ts = end_at_value | date: '%s' | plus: 0 %}
        
        {% comment %} Check if current Eastern time is within the scheduled range: start_at <= NOW < end_at {% endcomment %}
        {% if now_et >= start_ts and now_et < end_ts %}
          {% comment %} This entry matches - check if it has a more recent start time {% endcomment %}
          {% if start_ts > latest_start_ts or latest_start_ts == 0 %}
            {% assign latest_start_ts = start_ts %}
            {% assign selected_title = entry.headline %}
            {% assign selected_description = entry.description %}
            {% assign selected_desktop_banner = entry.desktop_banner %}
            {% assign selected_mobile_banner = entry.mobile_banner %}
            {% assign selected_target_url = entry.target_url %}
            {% assign selected_button_text = entry.button_text %}
            {% assign found_match = true %}
          {% endif %}
        {% endif %}
      {% endif %}
    {% endif %}
  {% endfor %}
{% endif %}

{% assign breakpoint = block.settings.breakpoint | default: 768 | plus: 0 %}
{% assign margin_top = block.settings.margin_top | default: 20 %}
{% assign margin_bottom = block.settings.margin_bottom | default: 20 %}

<div class="clockblock {% unless found_match and selected_target_url != blank %}clockblock--hidden{% endunless %}" style="margin-top: {{ margin_top }}px; margin-bottom: {{ margin_bottom }}px;" {{ block.shopify_attributes }}>
  {% if found_match and selected_target_url != blank %}
    {% assign mobile_content_below = block.settings.mobile_content_below | default: false %}
    {% assign overlay_color = block.settings.overlay_color | default: '#000000' %}
    {% assign overlay_opacity = block.settings.overlay_opacity | default: 70 | divided_by: 100.0 %}
    {% assign vertical_alignment = block.settings.vertical_alignment | default: 'bottom' %}
    {% assign content_alignment_desktop = block.settings.content_alignment_desktop | default: 'left' %}
    {% assign content_alignment_mobile = block.settings.content_alignment_mobile | default: 'left' %}
    {% assign button_padding_top = block.settings.button_padding_top | default: 12 %}
    {% assign button_padding_bottom = block.settings.button_padding_bottom | default: 12 %}
    {% assign button_padding_left = block.settings.button_padding_left | default: 30 %}
    {% assign button_padding_right = block.settings.button_padding_right | default: 30 %}
    {% assign headline_font_size = block.settings.headline_font_size | default: 2.5 %}
    {% assign title_font = block.settings.title_font %}
    {% assign description_font = block.settings.description_font %}
    {% assign description_font_size = block.settings.description_font_size | default: 0.9 %}
    {% assign button_font_size = block.settings.button_font_size | default: 1.0 %}
    {% assign button_border_radius = block.settings.button_border_radius | default: 6 %}
    {% assign title_color_overlay = block.settings.title_color_overlay | default: '#ffffff' %}
    {% assign title_color_below = block.settings.title_color_below | default: '#2c3e50' %}
    {% assign description_color_overlay = block.settings.description_color_overlay | default: '#ffffff' %}
    {% assign description_color_below = block.settings.description_color_below | default: '#666666' %}
    {% assign button_text_uppercase = block.settings.button_text_uppercase | default: false %}
    {% assign button_bg_overlay = block.settings.button_bg_overlay | default: '#ffffff' %}
    {% assign button_text_overlay = block.settings.button_text_overlay | default: '#667eea' %}
    {% assign button_bg_below = block.settings.button_bg_below | default: '#667eea' %}
    {% assign button_text_below = block.settings.button_text_below | default: '#ffffff' %}
    
    <a href="{{ selected_target_url }}" class="clockblock__link">
      <div class="clockblock__banner-container {% if mobile_content_below %}clockblock__banner-container--mobile-below{% endif %}">
        {% if selected_desktop_banner != blank %}
          <div class="clockblock__banner clockblock__banner--desktop">
            {{ selected_desktop_banner | image_url: width: 1920 | image_tag: alt: selected_title, class: 'clockblock__banner-img', loading: 'lazy' }}
            {% capture overlay_rgb %}{% assign color_no_hash = overlay_color | remove: '#' %}{% assign r = color_no_hash | slice: 0, 2 | hex_to_number %}{% assign g = color_no_hash | slice: 2, 2 | hex_to_number %}{% assign b = color_no_hash | slice: 4, 2 | hex_to_number %}{{ r }}, {{ g }}, {{ b }}{% endcapture %}
            <div class="clockblock__banner-content clockblock__banner-content--desktop clockblock__banner-content--v-{{ vertical_alignment }} clockblock__banner-content--align-{{ content_alignment_desktop }}" style="background: linear-gradient(to top, rgba({{ overlay_rgb | strip }}, {{ overlay_opacity }}), transparent);">
              <div class="clockblock__content-inner">
                {% if selected_title != blank %}
                  <h2 class="clockblock__title" style="font-size: {{ headline_font_size }}em; color: {{ title_color_overlay }};{% if title_font != blank %}font-family: {{ title_font.family }}, {{ title_font.fallback_families }}; font-weight: {{ title_font.weight }}; font-style: {{ title_font.style }};{% endif %}">{{ selected_title }}</h2>
                {% endif %}
                {% if selected_description != blank %}
                  <p class="clockblock__description" style="font-size: {{ description_font_size }}em; color: {{ description_color_overlay }};{% if description_font != blank %}font-family: {{ description_font.family }}, {{ description_font.fallback_families }}; font-weight: {{ description_font.weight }}; font-style: {{ description_font.style }};{% endif %}">{{ selected_description }}</p>
                {% endif %}
                {% if selected_button_text != blank %}
                  <span class="clockblock__button clockblock__button--overlay" style="padding: {{ button_padding_top }}px {{ button_padding_right }}px {{ button_padding_bottom }}px {{ button_padding_left }}px; font-size: {{ button_font_size }}em; border-radius: {{ button_border_radius }}px; background-color: {{ button_bg_overlay }}; color: {{ button_text_overlay }};{% if button_text_uppercase %}text-transform: uppercase;{% endif %}">{{ selected_button_text }}</span>
                {% endif %}
              </div>
            </div>
          </div>
        {% endif %}
        
        {% if selected_mobile_banner != blank %}
          <div class="clockblock__banner clockblock__banner--mobile">
            {{ selected_mobile_banner | image_url: width: 768 | image_tag: alt: selected_title, class: 'clockblock__banner-img', loading: 'lazy' }}
            {% if mobile_content_below == false %}
              {% capture overlay_rgb %}{% assign color_no_hash = overlay_color | remove: '#' %}{% assign r = color_no_hash | slice: 0, 2 | hex_to_number %}{% assign g = color_no_hash | slice: 2, 2 | hex_to_number %}{% assign b = color_no_hash | slice: 4, 2 | hex_to_number %}{{ r }}, {{ g }}, {{ b }}{% endcapture %}
              <div class="clockblock__banner-content clockblock__banner-content--mobile clockblock__banner-content--v-{{ vertical_alignment }} clockblock__banner-content--align-{{ content_alignment_mobile }}" style="background: linear-gradient(to top, rgba({{ overlay_rgb | strip }}, {{ overlay_opacity }}), transparent);">
                <div class="clockblock__content-inner">
                  {% if selected_title != blank %}
                    <h2 class="clockblock__title" style="font-size: {{ headline_font_size }}em; color: {{ title_color_overlay }};{% if title_font != blank %}font-family: {{ title_font.family }}, {{ title_font.fallback_families }}; font-weight: {{ title_font.weight }}; font-style: {{ title_font.style }};{% endif %}">{{ selected_title }}</h2>
                  {% endif %}
                  {% if selected_description != blank %}
                    <p class="clockblock__description" style="font-size: {{ description_font_size }}em; color: {{ description_color_overlay }};{% if description_font != blank %}font-family: {{ description_font.family }}, {{ description_font.fallback_families }}; font-weight: {{ description_font.weight }}; font-style: {{ description_font.style }};{% endif %}">{{ selected_description }}</p>
                  {% endif %}
                  {% if selected_button_text != blank %}
                    <span class="clockblock__button clockblock__button--overlay" style="padding: {{ button_padding_top }}px {{ button_padding_right }}px {{ button_padding_bottom }}px {{ button_padding_left }}px; font-size: {{ button_font_size }}em; border-radius: {{ button_border_radius }}px; background-color: {{ button_bg_overlay }}; color: {{ button_text_overlay }};{% if button_text_uppercase %}text-transform: uppercase;{% endif %}">{{ selected_button_text }}</span>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          </div>
        {% endif %}
        
        {% if mobile_content_below %}
          <div class="clockblock__content-below clockblock__content-below--mobile-only clockblock__content-below--align-{{ content_alignment_mobile }}">
            {% if selected_title != blank %}
              <h2 class="clockblock__title clockblock__title--below" style="font-size: {{ headline_font_size | times: 0.8 }}em; color: {{ title_color_below }};{% if title_font != blank %}font-family: {{ title_font.family }}, {{ title_font.fallback_families }}; font-weight: {{ title_font.weight }}; font-style: {{ title_font.style }};{% endif %}">{{ selected_title }}</h2>
            {% endif %}
            {% if selected_description != blank %}
              <p class="clockblock__description clockblock__description--below" style="font-size: {{ description_font_size }}em; color: {{ description_color_below }};{% if description_font != blank %}font-family: {{ description_font.family }}, {{ description_font.fallback_families }}; font-weight: {{ description_font.weight }}; font-style: {{ description_font.style }};{% endif %}">{{ selected_description }}</p>
            {% endif %}
            {% if selected_button_text != blank %}
              <span class="clockblock__button clockblock__button--below" style="padding: {{ button_padding_top }}px {{ button_padding_right }}px {{ button_padding_bottom }}px {{ button_padding_left }}px; font-size: {{ button_font_size }}em; margin: 0; border-radius: {{ button_border_radius }}px; background-color: {{ button_bg_below }}; color: {{ button_text_below }};{% if button_text_uppercase %}text-transform: uppercase;{% endif %}">{{ selected_button_text }}</span>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </a>
  {% elsif found_match %}
    {% comment %} Entry found but missing target URL {% endcomment %}
  {% endif %}
</div>


<style>
  .clockblock {
    width: 100%;
  }
  
  .clockblock--hidden {
    display: none !important;
  }
  
  .clockblock__banner-container {
    position: relative;
    width: 100%;
  }
  
  .clockblock__banner {
    position: relative;
    width: 100%;
    line-height: 0;
    overflow: hidden;
  }
  
  .clockblock__banner-img {
    display: block;
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  
  .clockblock__banner-content {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    color: white;
    padding: 30px 20px;
    display: flex;
    flex-direction: column;
    gap: 0;
    width: 100%;
    box-sizing: border-box;
  }
  
  .clockblock__banner-content--v-top {
    justify-content: flex-start;
  }
  
  .clockblock__banner-content--v-center {
    justify-content: center;
  }
  
  .clockblock__banner-content--v-bottom {
    justify-content: flex-end;
  }
  
  .clockblock__content-inner {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    gap: 0;
    width: 100%;
  }
  
  .clockblock__banner-content--align-left .clockblock__content-inner {
    text-align: left;
    align-items: flex-start;
  }
  
  .clockblock__banner-content--align-center .clockblock__content-inner {
    text-align: center;
    align-items: center;
  }
  
  .clockblock__banner-content--align-right .clockblock__content-inner {
    text-align: right;
    align-items: flex-end;
  }
  
  .clockblock__banner-content--desktop {
    display: flex;
  }
  
  .clockblock__banner-content--mobile {
    display: none;
  }
  
  .clockblock__content-below {
    display: none;
    padding: 30px 20px;
    text-align: center;
    background: #fff;
  }
  
  .clockblock__content-below .clockblock__button--below {
    margin: 0;
  }
  
  .clockblock__content-below--mobile-only {
    display: none;
  }
  
  .clockblock__banner--desktop {
    display: block;
  }
  
  .clockblock__banner--mobile {
    display: none;
  }
  
  @media all and (max-width: {{ breakpoint | minus: 1 }}px) {
    .clockblock__banner--desktop {
      display: none !important;
    }
    
    .clockblock__banner--mobile {
      display: block !important;
    }
    
    .clockblock__banner-content--desktop {
      display: none !important;
    }
    
    .clockblock__banner-content--mobile {
      display: flex !important;
    }
    
    .clockblock__banner-container--mobile-below .clockblock__banner-content--mobile {
      display: none !important;
    }
    
    .clockblock__content-below--mobile-only {
      display: block !important;
    }
  }
  
  @media all and (min-width: {{ breakpoint }}px) {
    .clockblock__banner--desktop {
      display: block !important;
    }
    
    .clockblock__banner--mobile {
      display: none !important;
    }
    
    .clockblock__banner-content--desktop {
      display: flex !important;
    }
    
    .clockblock__banner-content--mobile {
      display: none !important;
    }
    
    .clockblock__content-below--mobile-only {
      display: none !important;
    }
  }
  
  .clockblock__link {
    text-decoration: none;
    display: block;
    color: inherit;
  }

  .clockblock__link:hover {
    text-decoration: none;
  }

  .clockblock__banner-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
    color: white;
    text-align: left;
    padding: 40px;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }
  
  .clockblock__title {
    margin: 0 0 10px 0;
    font-weight: bold;
    line-height: 1.2;
  }
  
  .clockblock__title--below {
    margin: 0 0 10px 0;
  }
  
  .clockblock__description {
    margin: 0 0 15px 0;
    line-height: 1.5;
  }
  
  .clockblock__description--below {
    margin: 0 0 15px 0;
  }
  
  .clockblock__content-below--align-left {
    text-align: left;
  }
  
  .clockblock__content-below--align-center {
    text-align: center;
  }
  
  .clockblock__content-below--align-right {
    text-align: right;
  }
  
  .clockblock__content-below--align-left .clockblock__button--below {
    align-self: flex-start;
  }
  
  .clockblock__content-below--align-center .clockblock__button--below {
    align-self: center;
  }
  
  .clockblock__content-below--align-right .clockblock__button--below {
    align-self: flex-end;
  }

  @media all and (max-width: {{ breakpoint | minus: 1 }}px) {
    .clockblock__title {
      font-size: 2em;
    }
  }
  
  .clockblock__headline {
    margin: 0 0 15px 0;
    font-size: 1.8em;
    font-weight: 600;
    color: #34495e;
    line-height: 1.2;
  }
  
  @media (max-width: 768px) {
    .clockblock__headline {
      font-size: 1.4em;
    }
  }
  
  
      .clockblock__button {
        display: inline-block;
        text-decoration: none;
        font-weight: 600;
        font-size: 1em;
        transition: background-color 0.3s ease, transform 0.2s ease;
        cursor: pointer;
        width: auto;
        border: none;
        box-sizing: border-box;
      }
  
  .clockblock__link:hover .clockblock__button {
    transform: translateY(-2px);
  }

  .clockblock__link:active .clockblock__button {
    transform: translateY(0);
  }
  
  .clockblock__empty {
    padding: 40px 20px;
    text-align: center;
    color: #999;
    font-style: italic;
  }
  
</style>

